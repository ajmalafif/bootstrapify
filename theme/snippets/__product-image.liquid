{% capture vars %}
  {% assign product_url = product-loop.url | within: collection %}
  {% if product-loop.featured_image == blank %}
    {% include 'image-placeholder' %}
    {% assign image = image | link_to: product_url %}
  {% else %}
		{% assign image = product-loop.featured_image.src | product_img_url: 'grande' | img_tag: product-loop.featured_image.alt | link_to: product_url %}
  {% endif %}
{% endcapture %}