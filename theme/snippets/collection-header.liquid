<section class="collection--header">
  <div class="site--page">
    <div class="collection--intro">
    	{% if settings.collection-header-placement == 'above-products' %}<h1>{{ collection-header.title }}</h1>{% endif %}
    	{% unless col_image_position == 'do-not-show' or collection.image == null %}
    	<div class="collection__feature-image">
    		{% if col_image_position == 'full-width-above' %}{% assign col_thumb_size = '2048x2048' %}{% else %}{% assign col_thumb_size = 'grande' %}{% endif %}
    		{{ collection-header.image.src | collection_img_url: col_thumb_size | img_tag: collection-header.image.alt }}
    	</div>
    	{% endunless %}
    	{% unless collection-header.description == blank %}
      	{% unless is_nested and settings.show-descriptions-on-nested-collections-page == false %}
      	<div class="collection__description">
      		{{ collection-header.description }}
      	</div>
      	{% endunless %}
    	{% endunless %}
    </div>
  </div>
</section>