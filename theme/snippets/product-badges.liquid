{% capture badge_tag %}{% include '__localize' with 'badge' %}:{% endcapture %}
{% capture badges %}{% endcapture %}
{% for tag in product.tags %}
  {% if tag contains badge_tag %}
    {% capture badges %}{{ badges }}<li>{{ tag | remove: badge_tag | handleize | append: '_medium.png' | file_url | img_tag }}</li>{% endcapture %}
  {% endif %}
{% endfor %}
{% unless badges == '' %}
<ul class="list-inline product-badges">
  {{ badges }}
</ul>
{% endunless %}